{% trans_default_domain 'FOSUserBundle' %}
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
{% if form_errors(form.email)  %}
    <div class="alert alert-danger">
        <button class="close" data-close="alert"></button>
        <span>{{ form_errors(form.email) }} </span>
    </div>
{% endif %}
{% if form_errors(form.username)  %}
    <div class="alert alert-danger">
        <button class="close" data-close="alert"></button>
        <span>{{ form_errors(form.username) }} </span>
    </div>
{% endif %}
{% if form_errors(form.plainPassword.first)  %}
    <div class="alert alert-danger">
        <button class="close" data-close="alert"></button>
        <span>{{ form_errors(form.plainPassword.first) }} </span>
    </div>
{% endif %}
{% if form_errors(form.plainPassword.second)  %}
    <div class="alert alert-danger">
        <button class="close" data-close="alert"></button>
        <span>{{ form_errors(form.plainPassword.second) }} </span>
    </div>
{% endif %}
<div class="form-group">
    {{ form_label(form.email, null,  { 'label_attr': {'class': 'control-label visible-ie8 visible-ie9'} }) }}
    <div class="input-icon">
        <i class="fa fa-envelope"></i>
        {{ form_widget(form.email, { 'attr': {'autocomplete':'off','placeholder':'Adresse e-mail','class':'form-control placeholder-no-fix'} }) }}
    </div>
</div>

<div class="form-group">
    {{ form_label(form.username, null,  { 'label_attr': {'class': 'control-label visible-ie8 visible-ie9'} }) }}
    <div class="input-icon">
        <i class=" fa fa-user"></i>
        {{ form_widget(form.username, { 'attr': {'autocomplete':'off','placeholder':'Nom d\'utilisateur','class':'form-control placeholder-no-fix'} }) }}
    </div>
</div>

<div class="form-group">
    {{ form_label(form.plainPassword.first, null,  { 'label_attr': {'class': 'control-label visible-ie8 visible-ie9'} }) }}
    <div class="input-icon">
        <i class="fa fa-lock"></i>
        {{ form_widget(form.plainPassword.first, { 'attr': {'autocomplete':'off','placeholder':'Mot de passe','class':'form-control placeholder-no-fix'} }) }}
    </div>
</div>

<div class="form-group">
    {{ form_label(form.plainPassword.second, null,  { 'label_attr': {'class': 'control-label visible-ie8 visible-ie9'} }) }}
    <label class="control-label visible-ie8 visible-ie9">Confirmer mot de passe</label>
    <div class="input-icon">
        <i class="fa fa-lock"></i>
        {{ form_widget(form.plainPassword.second, { 'attr': {'autocomplete':'off','placeholder':'Confirmer mot de passe','class':'form-control placeholder-no-fix'} }) }}
    </div>
</div>

{{ form_rest(form) }}
<div class="form-actions">
    <a role="button" id="back-btn" class="btn red btn-outline" href="{{ path('fos_user_security_login') }}">Retour</a>
    <button type="submit" class="btn green">{{ 'registration.submit'|trans }}</button>
</div>
{{ form_end(form) }}
